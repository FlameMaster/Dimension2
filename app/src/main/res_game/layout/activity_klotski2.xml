<?xml version="1.0" encoding="utf-8"?>

<!--
*  布局说明：
*  所属分类：
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <GridLayout
        android:id="@+id/chessboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        app:layout_constraintDimensionRatio="H,4:5"
        android:background="@drawable/fg_klotski_frame"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/zhangfei"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/caocao"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/zhaoyun"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />


        <ImageView
            android:id="@+id/machao"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/guanyu"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/huangzhong"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/bin01"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/bin02"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/bin03"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/bin04"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/red"
            android:foreground="@drawable/fg_klotski_frame"
            android:scaleType="centerCrop"
            android:src="@mipmap/fc"
            tools:ignore="ContentDescription"
            android:layout_margin="2dp"
            />

    </GridLayout>

    <View
        android:id="@+id/door"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chessboard"
        android:background="@color/red"
        android:elevation="10dp"
        app:layout_constraintWidth_percent="0.5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
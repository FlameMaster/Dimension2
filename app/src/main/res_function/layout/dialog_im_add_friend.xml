<?xml version="1.0" encoding="utf-8"?><!--
*  布局说明：
*  所属分类：
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_dp8"
    android:elevation="8dp"
    >

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_edit_01"
        android:gravity="left|center_vertical"
        android:hint="请输入昵称..."
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/gray"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_ip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_edit_01"
        android:gravity="left|center_vertical"
        android:hint="IP地址"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/gray"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp"
        android:textColor="@color/mediumvioletred"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_name"
        app:layout_constraintRight_toLeftOf="@+id/edit_port"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/edit_port"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_edit_01"
        android:gravity="left|center_vertical"
        android:hint="端口"
        android:maxLines="1"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp"
        android:singleLine="true"
        android:textColor="@color/cyan"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/edit_ip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_ip"
        app:layout_constraintVertical_bias="0.0"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="72dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:letterSpacing="0.3"
        android:paddingVertical="12dp"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_port" />

</androidx.constraintlayout.widget.ConstraintLayout>
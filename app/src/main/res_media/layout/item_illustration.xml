<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <com.melvinhou.dimension2.ui.widget.RoundGifImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="4dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:scaleType="fitXY"
        android:transitionName="photo"
        app:loadImageHeight="@{height}"
        app:loadImageUrl="@{item.url}"
        app:loadImageWidth="@{width}">

    </com.melvinhou.dimension2.ui.widget.RoundGifImageView>

    <data class="ItemIllustrationBD">

        <variable
            name="item"
            type="com.melvinhou.dimension2.media.picture.IllustrationItem" />

        <variable
            name="width"
            type="Integer" />

        <variable
            name="height"
            type="Integer" />
    </data>
</layout>
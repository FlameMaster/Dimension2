<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ItemMoreBD">

        <variable
            name="state"
            type="Integer"/>

        <import type="android.view.View"/>
        <import type="com.melvinhou.kami.net.RequestState" />
        <import type="com.melvinhou.kami.net.ResultState" />
    </data>
    <!--加载更多-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Dimension2Theme"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <!--文字描述-->
            <TextView
                android:id="@+id/text_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="26dp"
                android:text="@string/request_result_no_more"
                android:textColor="?attr/colorPrimary"
                android:textSize="15sp"
                android:visibility="@{(state == RequestState.RUNNING)?View.GONE:View.VISIBLE}"
                />
            <!--进度条-->
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:indeterminateTint="?attr/colorAccent"
                android:visibility="@{(state == RequestState.RUNNING)?View.VISIBLE:View.GONE}"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </FrameLayout>
</layout>
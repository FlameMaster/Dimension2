<resources>

    <style name="Dimension2Theme" parent="KamiTheme">
        <!-- ActionBar的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 控件的高亮状态颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 默认控件颜色-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <!-- 文字的颜色 -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- 底部ico的默认颜色-->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!-- bar样式-->
        <item name="android:actionBarStyle">@style/Dimension2Bar</item>
        <!-- 背景色-->
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>


    <style name="Dimension2Bar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:actionMenuTextColor">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
    </style>


    <style name="Dimension2Bar2" parent="Dimension2Bar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="Dimension2Popup" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:popupBackground">@color/transparent</item>
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@color/transparent</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>


    <style name="Dimension2Popup2" parent="Dimension2Popup">
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
    </style>


    <style name="Dimension2Dialog" parent="android:Theme.Holo.Light.Dialog">
        <!--背景透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--背景透明-->
        <item name="android:background">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <!--<item_main_clazz_end name="android:windowFrame">@null</item_main_clazz_end>-->
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/Animation.Dialog.Bottom</item>
    </style>




    <style name="PictureBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/web_detail_back</item>-->
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>
    <style name="PicturePopup" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:popupBackground">@color/transparent</item>
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@drawable/bg_menu_item</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>
    <style name="MusicPlayerPopup" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="PdfPopup" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>

<!--
*  布局说明：
*  所属分类：
-->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    >

    <View
        android:id="@+id/v_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:3"
        android:background="@drawable/bg_vip_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/bt_vip_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即开通"
        android:textColor="#FFE9D0"
        android:textSize="14sp"
        android:background="@drawable/round_dp16"
        android:backgroundTint="#444"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/tv_vip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#905000"
        android:text="FC超值会员"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_vip_sample01"
        android:drawableTint="#905000"
        android:drawablePadding="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/tv_vip_contont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:text="VIP MSK"
        android:fontFamily="@font/bod_r"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@id/tv_vip_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_vip_explain"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tv_vip_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:text="您还未开通超级会员，现在开通立享超值优惠。"
        app:layout_constraintLeft_toLeftOf="@id/tv_vip_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_vip_contont"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
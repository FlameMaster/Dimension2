<?xml version="1.0" encoding="utf-8"?>

<!--
*  布局说明：
*  所属分类：
-->
<com.melvinhou.user_sample.account.AccountTestView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1800dp"
    android:layout_marginHorizontal="12dp"
    android:background="@drawable/round_dp8"
    android:backgroundTint="#ccc"
    android:layout_marginTop="10dp"
    >
    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/tv_money_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/bg_account_bt"
        android:paddingHorizontal="24dp"
        android:paddingVertical="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_money_withdrawal"
        android:layout_marginBottom="6dp"
        />
    <TextView
        android:id="@+id/tv_money_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/bg_account_bt"
        android:paddingHorizontal="24dp"
        android:paddingVertical="5dp"
        app:layout_constraintRight_toRightOf="@id/tv_money_recharge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_money_recharge"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/tv_money_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钱包余额"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/tv_money_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_money_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_money_title"
        app:layout_constraintRight_toLeftOf="@id/tv_money_recharge"
        android:layout_marginRight="8dp"
        android:layout_marginTop="272dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可提现余额（元）"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_money_title"
        app:layout_constraintTop_toBottomOf="@id/tv_money_num"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1126dp"
        />
</com.melvinhou.user_sample.account.AccountTestView>
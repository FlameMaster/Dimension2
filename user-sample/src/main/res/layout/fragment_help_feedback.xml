<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_bg"
    android:orientation="vertical">



    <include
        android:id="@id/bar_root"
        layout="@layout/inset_bar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="true"
        android:layout_marginTop="1dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="反馈问题类型"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="16dp"
                />
            <RadioGroup
                android:id="@+id/rg_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rb_01"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_dp8_s1"
                    android:backgroundTint="@color/selector_state_text"
                    android:button="@null"
                    android:text="功能问题"
                    android:textSize="14sp"
                    android:textColor="@color/selector_state_text"
                    android:gravity="center_horizontal"
                    android:paddingVertical="6dp"
                    android:layout_marginHorizontal="8dp"
                    />
                <RadioButton
                    android:id="@+id/rb_02"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_dp8_s1"
                    android:backgroundTint="@color/selector_state_text"
                    android:button="@null"
                    android:text="体验问题"
                    android:textSize="14sp"
                    android:textColor="@color/selector_state_text"
                    android:gravity="center_horizontal"
                    android:paddingVertical="6dp"
                    android:layout_marginHorizontal="8dp"
                    />
                <RadioButton
                    android:id="@+id/rb_03"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_dp8_s1"
                    android:backgroundTint="@color/selector_state_text"
                    android:button="@null"
                    android:text="预约问题"
                    android:textSize="14sp"
                    android:textColor="@color/selector_state_text"
                    android:gravity="center_horizontal"
                    android:paddingVertical="6dp"
                    android:layout_marginHorizontal="8dp"
                    />
                <RadioButton
                    android:id="@+id/rb_04"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_dp8_s1"
                    android:backgroundTint="@color/selector_state_text"
                    android:button="@null"
                    android:text="其他问题"
                    android:textSize="14sp"
                    android:textColor="@color/selector_state_text"
                    android:gravity="center_horizontal"
                    android:paddingVertical="6dp"
                    android:layout_marginHorizontal="8dp"
                    />
            </RadioGroup>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_dp8_s1"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="请输入反馈信息~"
                android:textColorHint="@color/gray"
                android:gravity="start"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:maxLength="300"
                android:minHeight="120dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
            <EditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入你的手机号/微信/QQ"
                android:background="@drawable/round_dp8_s1"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:lines="1"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingHorizontal="8dp"
                android:paddingVertical="16dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上传图片"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="16dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_files"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:background="@color/white"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:itemCount="4"
                tools:listitem="@layout/items_img_choose"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="72dp"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        >
        <Button
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:enabled="false"
            android:text="@string/button_submit"
            android:textColor="@color/white"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/selector_button"
            android:letterSpacing="0.5" />

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<!--
*  布局说明：
*  所属分类：
-->
<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_headpic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_head_sample01"
        android:scaleType="centerCrop"
        android:foreground="@drawable/fg_photo_stroke"
        app:round="32dp"
        />

    <ImageView
        android:id="@+id/bt_like"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_tiktok_star"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="999"
        />

    <ImageView
        android:id="@+id/bt_comment"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_tiktok_comments"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="评论"
        />

    <ImageView
        android:id="@+id/bt_share"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_tiktok_share"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="分享"
        />


</LinearLayout>
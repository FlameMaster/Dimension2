<?xml version="1.0" encoding="utf-8"?>

<!--
*  布局说明：
*  所属分类：
-->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:round="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:foreground="@drawable/round_dp8_s1"
        android:foregroundTint="#DDD"
        />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:round="8dp"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintBottom_toBottomOf="@id/img"
        app:layout_constraintLeft_toLeftOf="@id/img"
        app:layout_constraintRight_toRightOf="@id/img"
        android:elevation="1dp"
        android:src="@drawable/ic_item_img_add"
        android:foreground="@drawable/round_dp8_s1"
        android:foregroundTint="#DDD"
        />

    <TextView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/round_dp8_bottom"
        android:backgroundTint="#8000"
        android:gravity="center"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="@id/img"
        app:layout_constraintLeft_toLeftOf="@id/img"
        app:layout_constraintRight_toRightOf="@id/img"
        android:elevation="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<!--
*  布局说明：
*  所属分类：
-->
<LinearLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@id/bar_root"
        layout="@layout/inset_bar" />

    <RadioGroup
        android:id="@+id/rg_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        >
        <RadioButton
            android:id="@+id/rb01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Soket服务端"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            />
        <RadioButton
            android:id="@+id/rb02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Soket客户端"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IP地址："
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/round_dp8"
        android:backgroundTint="#30E91E63"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:visibility="gone"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eg_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="连接ip地址"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:inputType="number|text"
            android:lines="1"
            android:digits="0123456789."
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接服务"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/bar_root"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        />

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edit_01"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:layout_marginVertical="8dp"
            android:hint="等待輸入中..."
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:imeOptions="actionSend"
            android:inputType="text"
            tools:ignore="Autofill" />
        <ImageView
            android:id="@+id/bt_send"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@android:drawable/ic_menu_send"
            android:background="?attr/colorAccent"
            android:padding="8dp"
            app:tint="@color/white" />

    </LinearLayout>

</LinearLayout>
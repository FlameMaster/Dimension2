<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    >
    <include
        android:id="@id/bar_root"
        layout="@layout/inset_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_anim01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/default_cover"
            android:scaleType="centerCrop"
            android:layout_margin="20dp"
            android:transitionName="fc"
            />

        <TextView
            android:id="@+id/tv_anim02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屠龙宝刀点击就送"
            android:textSize="16sp"
            android:textColor="@color/magenta"
            android:background="@color/lime"
            android:paddingVertical="20dp"
            android:paddingHorizontal="32dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_anim03"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray"
            android:src="@drawable/anim_interaction_state"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="屠龙宝刀"
            android:background="@color/red"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <View
            android:id="@+id/v01"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_star_01_n"
            android:foreground="@drawable/ic_star_02_n"
            android:backgroundTint="@color/red"
            android:foregroundTint="@color/blue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_anim04"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:background="@color/pink"
            android:text="点击就送01"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            />
        <TextView
            android:id="@+id/tv_anim05"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:background="@color/pink"
            android:text="点击就送02"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            />
    </LinearLayout>



</LinearLayout>